@model Graduation_Project.Models.ProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Your Profile</h2>

    <!-- User Information -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Welcome, @Model.User.FirstName @Model.User.LastName</h5>
            <p class="card-text"><strong>Email:</strong> @Model.User.Email</p>
        </div>
    </div>

    <!-- Addresses Section -->
    <h3 class="mb-3">Your Addresses</h3>
    @if (Model.Addresses != null && Model.Addresses.Any())
    {
        <table class="table table-bordered mb-4">
            <thead>
                <tr>
                    <th>Address Line 1</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Postal Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var address in Model.Addresses)
                {
                    <tr>
                        <td>@address.AddressLine1</td>
                        <td>@address.City</td>
                        <td>@address.Country</td>
                        <td>@address.PostalCode</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No addresses found.</p>
    }
    <div class="mb-4">
        <a href="@Url.Action("AddAddress", "Account")" class="btn btn-primary">Add New Address</a>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Total Orders</h5>
                    <p>@Model.Orders.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Total Spent</h5>
                    <p>@Model.Orders.Sum(o => o.TotalPrice).ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Pending Orders</h5>
                    <p>@Model.Orders.Count(o => o.OrderStatus == "Pending")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Section -->
    <h3 class="mb-3">Your Orders</h3>
    @if (Model.Orders.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                        <td>@order.TotalPrice.ToString("C")</td>
                        <td>@order.OrderStatus</td>
                        <td>
                            <button class="btn btn-info btn-sm" onclick="showOrderDetails(@order.OrderId)">View Details</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Order Details -->
        <div id="orderDetails" class="mt-4 d-none">
            <h4>Order Details</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody id="orderDetailsBody"></tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center text-muted">You have no orders yet.</p>
    }
</div>

@section Scripts {
    <script>
        function showOrderDetails(orderId) {
            $.ajax({
                url: '@Url.Action("GetOrderDetails", "Account")',
                type: 'GET',
                data: { orderId: orderId },
                success: function (response) {
                    if (response.success) {
                        var detailsBody = $('#orderDetailsBody');
                        detailsBody.empty();
                        response.orderItems.forEach(function (item) {
                            detailsBody.append(`
                                <tr>
                                    <td>${item.productName}</td>
                                    <td>${item.price}</td>
                                    <td>${item.quantity}</td>
                                    <td>${(item.price * item.quantity).toLocaleString('en-US', { style: 'currency', currency: 'USD' })}</td>
                                </tr>
                            `);
                        });
                        $('#orderDetails').removeClass('d-none');
                    }
                },
                error: function () {
                    alert('Error loading order details.');
                }
            });
        }
    </script>
}